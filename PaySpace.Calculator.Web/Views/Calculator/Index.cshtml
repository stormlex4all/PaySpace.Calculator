@model CalculatorViewModel
@{
    ViewBag.Title = "Calculate Tax";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
    </head>
    <body>
    @using (Html.BeginForm("Index", "Calculator", FormMethod.Post))
        {
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <th colspan="2" align="center">Tax Details</th>
                </tr>
                <tr>
                    <td>Income: </td>
                    <td>
                        @Html.TextBoxFor(m => m.Income)
                    </td>
                </tr>
                <tr>
                    <td>Postal Code: </td>
                    <td>
                        @Html.DropDownListFor(m => m.PostalCode, @Model.PostalCodes, "Please select postal code for tax")
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Submit" /></td>
                </tr>
            </table>
        }
    </body>
</html>

